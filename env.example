# Arvis Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API (for Whisper STT and GPT LLM)
OPENAI_API_KEY=sk-your-api-key-here

# Hardware Mode
# Set to "false" to use real hardware (smart plugs, LEDs, PIR sensor, etc.)
# Set to "true" to use mock mode (for development without hardware)
ARVIS_MOCK_HARDWARE=false

# Debug Mode
ARVIS_DEBUG=false

# Spotify API
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback
